<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.FindLocationFragment"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_find_city"
        android:hint="@string/hint"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="34dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/country_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tv_country_name"
        android:layout_gravity="center_horizontal"
        android:textSize="29sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Russia"/>
    <ImageView
        android:visibility="gone"
        android:id="@+id/img_not_found"
        android:src="@drawable/not_available"
        android:layout_gravity="center_horizontal"
        android:layout_width="150dp"
        android:layout_height="150dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_country_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:text="Sun" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_country_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    tools:text="High : 25"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_country_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white"
                    tools:text="Low : 25"
                    android:textStyle="bold"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_date_country_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="jun 21" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv__country_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:textColor="@color/white"
            android:textSize="75sp"
            tools:text=" 22" />

        <ImageView
            android:id="@+id/img_country_weather"
            android:layout_width="100dp"
            android:layout_marginLeft="10dp"
            android:layout_height="110dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/sun_cloud"
            android:visibility="gone"
            />

    </LinearLayout>
        <ListView
            android:numColumns="5"
            android:id="@+id/gw_week_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ListView>
</LinearLayout>

